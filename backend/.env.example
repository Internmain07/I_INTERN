# ===========================================
# I-INTERN BACKEND - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ===========================================
# CORE APPLICATION SETTINGS
# ===========================================

# Secret key for JWT token generation (use a strong random string)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-this-to-random-string

# Database connection URL
# Development (SQLite): sqlite:///./test.db
# Production (PostgreSQL): postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@host:port/database

# Environment mode: development, staging, or production
# IMPORTANT: Set to 'production' when deploying!
ENVIRONMENT=production

# ===========================================
# URL CONFIGURATION
# ===========================================

# Frontend URL (for password reset links, welcome emails, etc.)
# Development: http://localhost:8081
# Production: https://your-frontend-url.onrender.com or https://i-intern.com
FRONTEND_URL=https://your-frontend-url.onrender.com

# Backend URL (for OAuth callbacks, API documentation, etc.)
# Development: http://localhost:8000
# Production: https://your-backend-url.onrender.com or https://api.i-intern.com
BACKEND_URL=https://your-backend-url.onrender.com

# Allowed CORS origins (comma-separated list)
# Development: include localhost URLs
# Production: include only your production domains (IMPORTANT!)
ALLOWED_ORIGINS=https://your-frontend-url.onrender.com,https://i-intern.com,https://www.i-intern.com

# ===========================================
# EMAIL/SMTP CONFIGURATION
# ===========================================
# Required for: Password reset, Email verification, Welcome emails
# Leave blank in development to skip sending emails (will print to console)

# SMTP Server (Gmail: smtp.gmail.com)
SMTP_SERVER=smtp.gmail.com

# SMTP Port (587 for TLS, 465 for SSL)
SMTP_PORT=587

# SMTP Username (your email address)
SMTP_USERNAME=your-email@gmail.com

# SMTP Password (use Gmail App Password, not regular password)
# How to get Gmail App Password:
# 1. Enable 2-factor authentication on your Google account
# 2. Go to https://myaccount.google.com/apppasswords
# 3. Create a new app password for "Mail"
# 4. Use that 16-character password here
SMTP_PASSWORD=your-app-password-here

# From Email (sender email address shown in emails)
FROM_EMAIL=noreply@i-intern.com

# ===========================================
# GOOGLE OAUTH (OPTIONAL)
# ===========================================
# Currently disabled in code. Uncomment endpoints in auth.py to enable
# Get credentials from: https://console.cloud.google.com/apis/credentials

# GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# ===========================================
# COOKIE CONFIGURATION
# ===========================================
# Cookie settings for secure authentication

# Cookie SameSite setting (lax, strict, or none)
# Production: lax (recommended) or strict
# Development: lax
COOKIE_SAMESITE=lax

# Cookie Secure flag (true for HTTPS, false for HTTP)
# Production: true (REQUIRED for HTTPS)
# Development: false (localhost uses HTTP)
# IMPORTANT: Must be 'true' in production!
COOKIE_SECURE=true

# Cookie Domain (for cross-subdomain support)
# Production: .yourdomain.com (with leading dot) OR .onrender.com
# Development: leave empty or set to localhost
COOKIE_DOMAIN=.onrender.com

# Cookie HTTPOnly flag (prevents JavaScript access)
# Recommended: true (security best practice)
COOKIE_HTTPONLY=true

# Cookie Max Age in seconds (how long cookie remains valid)
# Default: 604800 (7 days)
COOKIE_MAX_AGE=604800

# ===========================================
# ADDITIONAL SETTINGS (Advanced)
# ===========================================

# Build settings for Render.com (only needed on Render)
# CARGO_HOME=/opt/render/project/.cargo
# CARGO_TARGET_DIR=/opt/render/project/.cargo-target
